<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.benew.filmbible.mapper.video.VideoThumbMapper">
    <resultMap id="thumbMap" type="VideoThumbDto">
        <id column="fb_vt_idx" property="vtIdx" />
        <result column="fb_vt_video_id" property="videoId"/>
        <result column="fb_vt_thumb" property="thumbUrl" />
        <result column="fb_vt_size_type" property="thumbType" />
    </resultMap>

    <select id="findAllVideoIdsByThumb" resultType="String">
        select
            fb_vt_video_id
        from FB_VIDEO_THUMB
    </select>

    <select id="findThumbById" resultMap="thumbMap">
        select
            *
        from FB_VIDEO_THUMB
        where fb_vt_video_id = #{videoId}
    </select>
</mapper>